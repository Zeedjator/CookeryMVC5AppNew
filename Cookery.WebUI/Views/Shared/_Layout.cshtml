@{
    Layout = null;
    

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
<div class="navbar navbar-inverse">
    <a class="navbar-brand" href="#"> <i class="glyphicon glyphicon-cutlery"></i> Cookery! </a>
    @using (Html.BeginForm("List", "Recipe", FormMethod.Get,
    new { @class = "navbar-form navbar-left"}))
    {
        @Html.TextBox("searchValue", @ViewBag.SearchValue as string, new { @class = "form-control", placeholder = "Рецепт или ингредиенты" })
        <button type="submit" class="btn btn-default">
            <i class="glyphicon glyphicon-search"></i>
        </button>
    }
    
    @Html.Action("CurrentUser", "Account")
    
</div>
<div class="visible-xs">
    @Html.Action("Menu", "Nav", new {horizontalNav = true})
</div>

<div class="row panel">
    <div id="categories" class="col-sm-3 hidden-xs">
        @Html.Action("Menu", "Nav")
    </div>
    <div class="col-xs-12 col-sm-8">
        @RenderBody()
    </div>
</div>
    
</body>
</html>